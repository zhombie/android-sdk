<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatUi.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">7dp</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">@color/chat_ui_ripple</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ChatUi.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/chat_ui_ripple</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ChatUi.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/chat_ui_ripple</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ChatUi.IconButton" parent="ChatUi.UnelevatedButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="ChatUi.CircleButton" parent="ChatUi.UnelevatedButton">
        <item name="shapeAppearance">@style/ChatUi.ShapeAppearance.Circle</item>
    </style>

    <style name="ChatUi.CircleIconButton" parent="ChatUi.UnelevatedButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearance">@style/ChatUi.ShapeAppearance.Circle</item>
    </style>

</resources>