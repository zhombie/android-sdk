<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/chat_ui_horizontal_padding"
    android:layout_marginEnd="@dimen/chat_ui_message_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/chat_ui_incoming_message_background"
        android:orientation="vertical">

        <kz.garage.chat.ui.components.HTMLTextView
            android:id="@+id/textView"
            style="@style/ChatUi.Chat.Message.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/chat_ui_message_text_vertical_padding"
            android:layout_marginBottom="@dimen/chat_ui_message_text_vertical_padding"
            android:gravity="start"
            android:paddingLeft="@dimen/chat_ui_message_text_horizontal_padding"
            android:paddingRight="@dimen/chat_ui_message_text_horizontal_padding"
            tools:text="👋 Приветствую! Меня зовут Qwerty.\n\nМне нужно несколько секунд, чтобы посмотреть Вашу переписку. Пожалуйста, оставайтесь на линии." />

    </LinearLayout>

    <kz.garage.chat.ui.components.MessageTimeView
        android:id="@+id/timeView"
        style="@style/ChatUi.Chat.Message.TimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/chat_ui_message_time_margin_left"
        android:layout_marginTop="@dimen/chat_ui_message_time_margin_top"
        tools:text="04:20" />

</LinearLayout>