<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatUi.TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="ChatUi.MessageTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textAppearance">@style/ChatUi.TextAppearance.Message.Body</item>
    </style>

    <style name="ChatUi.TextAppearance.Message.Body" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/chat_ui_light_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="ChatUi.TextAppearance.Message.Time" parent="ChatUi.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#8A8D91</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ChatUi.TextAppearance.Info.Label" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#7B797A</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ChatUi.TextAppearance.Info.Value" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/chat_ui_light_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

</resources>